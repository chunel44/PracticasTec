<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.estrada.practicastec.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/to_text_input_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/Dinero"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad Dinero"
                android:freezesText="true"
                android:inputType="numberDecimal"
                android:layout_marginTop="45dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/calcular4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="35dp"
            android:text="Calculatr Cambio"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/resultado4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:freezesText="true"
            android:textSize="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="35dp"
            android:paddingLeft="25dp"/>
    </LinearLayout>

</RelativeLayout>